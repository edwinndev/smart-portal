---
import { Image } from 'astro:assets'
import check from '@public/svg/check.svg'

const { course } = Astro.props
---

<section class="mx-auto max-w-7xl px-8 py-12">
	<h2
		class="mb-8 text-pretty text-center text-xl font-semibold uppercase text-black md:mb-12 md:text-3xl"
	>
		Proyectos que desarrollaremos en el curso
	</h2>
	<ul class="flex flex-col items-start justify-start gap-4">
		{
			course.proyects.map((proyect: string) => (
				<li class="flex items-start justify-start gap-2 lg:max-w-md">
					<Image
						src={check}
						alt="Ã­cono de check"
						width={24}
						height={24}
						class="pt-1 md:pt-2"
					/>
					<p class="text-pretty text-start text-lg md:text-xl lg:max-w-lg">
						{proyect}
					</p>
				</li>
			))
		}
	</ul>
</section>
