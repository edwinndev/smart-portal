---
import { Image } from 'astro:assets'
import CalimodLogo from '@/assets/Inicio/Calimod-Logo.webp'
import UniLogo from '@/assets/Inicio/UNI-Logo.webp'
import UtpLogo from '@/assets/Inicio/UTP-Logo.webp'
import ConidaLogo from '@/assets/Inicio/Conida-Logo.webp'
---

<section class="mx-auto max-w-7xl py-12">
	<h2
		class="mb-8 text-center text-xl font-semibold uppercase md:mb-12 md:text-3xl"
	>
		Nuestros clientes
	</h2>
	<ul
		class="mx-auto flex max-w-7xl flex-wrap items-center justify-center gap-12"
	>
		<Image src={CalimodLogo} alt="Logo de" width={312} height={40} />
		<Image src={UniLogo} alt="Logo de" width={312} height={40} />
		<Image src={UtpLogo} alt="Logo de" width={312} height={40} />
		<Image src={ConidaLogo} alt="Logo de" width={312} height={40} />
	</ul>
</section>
