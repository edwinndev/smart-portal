---
import { Image } from 'astro:assets'
import Hero2Image from '@/assets/Inicio/Hero2.webp'
---

<section class="bg-black pt-16 md:pt-0">
	<div class="relative mx-auto max-w-7xl">
		<Image
			src={Hero2Image}
			width={1280}
			height={720}
			alt="MMJ Smart Electronics"
			class=""
		/>
		<div
			class="absolute inset-0 left-0 top-0 flex flex-col items-center justify-center text-center"
		>
			<h1
				class="text-pretty text-lg font-normal uppercase leading-normal tracking-wide text-white sm:text-lg md:text-3xl lg:max-w-xl lg:text-5xl"
			>
				Somos MMJ Smart Electronics <br />
				<span class="text-xs md:text-base lg:text-lg">
					+ 7 años formando especialistas
				</span>
			</h1>
			<a
				href=""
				class="mt-2 inline-block w-40 bg-white py-2 text-center text-sm font-medium uppercase tracking-wider hover:bg-gray-200 md:mt-8 md:text-base lg:mt-8 lg:w-48 lg:text-xl"
				>Contáctanos</a
			>
		</div>
	</div>
</section>

<style>
	h1 {
		text-shadow: 0px 5px 21px rgba(0, 0, 0, 0.6);
	}
</style>
