<style is:global>
	/* Register your custom font family and tell the browser where to find it. */
	@font-face {
		font-family: Dubai;
		src: url('/fonts/DubaiW23-Bold.woff') format('woff');
		font-weight: 700;
	}
	@font-face {
		font-family: Dubai;
		src: url('/fonts/DubaiW23-Regular.woff') format('woff');
		font-weight: 400;
	}
	@font-face {
		font-family: Dubai;
		src: url('/fonts/DubaiW23-Medium.woff') format('woff');
		font-weight: 500;
	}
	@font-face {
		font-family: Dubai;
		src: url('/fonts/DubaiW23-Light.woff') format('woff');
		font-weight: 300;
	}

	html,
	* {
		font-family:
			'Dubai',
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			'Segoe UI',
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			'Open Sans',
			'Helvetica Neue',
			sans-serif;
		box-sizing: border-box;
	}
</style>
