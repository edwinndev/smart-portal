			<li class="text-center font-medium">
				<a class="block w-full" href="">Cont√°ctanos</a>
			</li>
		</ul>
	</div>
</nav-burguer>
<script>
	class navAstroHamburguer extends HTMLElement {
		constructor() {
			super()

			let isOpen = false // Start close

			let bar1 = this.querySelector('#bar1')
			let bar2 = this.querySelector('#bar2')
			let bar3 = this.querySelector('#bar3')

			let navAcorderon = this.querySelector('#nav-acordeon')

			this.addEventListener('click', () => {
				isOpen = !isOpen // Close - Open . . .

				this.classList.toggle('gap-1')

				bar1?.classList.toggle('translate-y-1')
				bar1?.classList.toggle('rotate-45')

				bar2?.classList.toggle('opacity-0')

				bar3?.classList.toggle('-translate-y-1')
				bar3?.classList.toggle('-rotate-45')

				if (isOpen) {
					navAcorderon?.classList.remove('h-0')
					navAcorderon?.classList.add('h-64')
				} else {
					navAcorderon?.classList.remove('h-64')
					navAcorderon?.classList.add('h-0')
				}
			})
		}
	}

	customElements.define('nav-burguer', navAstroHamburguer)
</script>

